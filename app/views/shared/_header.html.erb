<header class="bg-blue-600 shadow-md">
  <nav class="container mx-auto px-4 py-3">
    <div class="flex flex-wrap items-center justify-between">
      <%= link_to 'Yatai Now', root_path, class: 'text-2xl font-bold text-white hover:text-gray-200' %>

      <!-- Mobile menu button -->
      <button data-collapse-toggle="navbar-default" type="button" class="inline-flex items-center p-2 w-10 h-10 justify-center text-sm text-white rounded-lg md:hidden hover:bg-blue-700 focus:outline-none focus:ring-2 focus:ring-gray-200" aria-controls="navbar-default" aria-expanded="false" onclick="document.getElementById('navbar-default').classList.toggle('hidden')">
          <span class="sr-only">Open main menu</span>
          <svg class="w-5 h-5" aria-hidden="true" xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 17 14">
              <path stroke="currentColor" stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M1 1h15M1 7h15M1 13h15"/>
          </svg>
      </button>

      <div class="hidden w-full md:block md:w-auto" id="navbar-default">
        <ul class="font-medium flex flex-col p-4 md:p-0 mt-4 border border-blue-500 rounded-lg bg-blue-700 md:flex-row md:space-x-8 md:mt-0 md:border-0 md:bg-blue-600">
          <li>
            <%= link_to t('layouts.application.header.map'), map_path, class: "block py-2 pl-3 pr-4 text-white rounded hover:bg-blue-700 md:hover:bg-transparent md:border-0 md:hover:text-blue-200 md:p-0 #{'underline' if current_page?(map_path)}" %>
          </li>

          <% if user_signed_in? %>
            <% if current_user.admin? %>
              <li><%= link_to t('layouts.application.header.festivals'), admin_festivals_path, class: "block py-2 pl-3 pr-4 text-white rounded hover:bg-blue-700 md:hover:bg-transparent md:border-0 md:hover:text-blue-200 md:p-0 #{'underline' if current_page?(admin_festivals_path)}" %></li>
              <li><%= link_to t('layouts.application.header.users'), admin_users_path, class: "block py-2 pl-3 pr-4 text-white rounded hover:bg-blue-700 md:hover:bg-transparent md:border-0 md:hover:text-blue-200 md:p-0 #{'underline' if current_page?(admin_users_path)}" %></li>
              <li><%= link_to t('layouts.application.header.stalls'), admin_stalls_path, class: "block py-2 pl-3 pr-4 text-white rounded hover:bg-blue-700 md:hover:bg-transparent md:border-0 md:hover:text-blue-200 md:p-0 #{'underline' if current_page?(admin_stalls_path)}" %></li>
              <li><%= link_to t('layouts.application.header.settings'), edit_admin_settings_path, class: "block py-2 pl-3 pr-4 text-white rounded hover:bg-blue-700 md:hover:bg-transparent md:border-0 md:hover:text-blue-200 md:p-0 #{'underline' if current_page?(edit_admin_settings_path)}" %></li>
            <% elsif current_user.manager? %>
              <li><%= link_to t('layouts.application.header.my_stall'), manager_stall_path, class: "block py-2 pl-3 pr-4 text-white rounded hover:bg-blue-700 md:hover:bg-transparent md:border-0 md:hover:text-blue-200 md:p-0 #{'underline' if current_page?(manager_stall_path)}" %></li>
            <% end %>

            <li class="hidden md:block text-gray-300">|</li>

            <li class="relative group">
              <button class="flex items-center justify-between w-full py-2 pl-3 pr-4 text-white rounded hover:bg-blue-700 md:hover:bg-transparent md:border-0 md:hover:text-blue-200 md:p-0 md:w-auto">
                <%= current_user.email %> <svg class="w-2.5 h-2.5 ms-2.5" aria-hidden="true" xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 10 6"><path stroke="currentColor" stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="m1 1 4 4 4-4"/></svg>
              </button>
              <!-- Dropdown menu -->
              <div class="z-10 hidden font-normal bg-white divide-y divide-gray-100 rounded-lg shadow w-44 absolute right-0 group-hover:block">
                  <ul class="py-2 text-sm text-gray-700" aria-labelledby="dropdownLargeButton">
                    <li>
                      <%= link_to t('layouts.application.header.edit_account'), edit_user_registration_path, class: 'block px-4 py-2 hover:bg-gray-100' %>
                    </li>
                  </ul>
                  <div class="py-1">
                    <%= link_to t('layouts.application.header.logout'), destroy_user_session_path, data: { turbo_method: :delete, turbo_confirm: t('layouts.application.header.logout_confirm') }, class: 'block px-4 py-2 text-sm text-gray-700 hover:bg-gray-100' %>
                  </div>
              </div>
            </li>
          <% else %>
            <li>
              <%= link_to t('layouts.application.header.login'), new_user_session_path, class: 'block py-2 pl-3 pr-4 text-white bg-blue-500 rounded hover:bg-blue-400 md:bg-transparent md:text-white md:p-0 md:border md:border-white md:px-3 md:hover:bg-blue-700 md:hover:text-white transition' %>
            </li>
          <% end %>
          <li class="hidden md:block text-gray-300">|</li>

          <% if I18n.locale == :ja %>
            <li><%= link_to "English", url_for(locale: 'en'), class: "block py-2 pl-3 pr-4 text-white rounded hover:bg-blue-700 md:hover:bg-transparent md:border-0 md:hover:text-blue-200 md:p-0" %></li>
          <% else %>
            <li><%= link_to "日本語", url_for(locale: 'ja'), class: "block py-2 pl-3 pr-4 text-white rounded hover:bg-blue-700 md:hover:bg-transparent md:border-0 md:hover:text-blue-200 md:p-0" %></li>
          <% end %>
        </ul>
      </div>
    </div>
  </nav>
</header>
