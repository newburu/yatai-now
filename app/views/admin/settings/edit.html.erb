<% content_for :title, t(".title") %>
<div class="bg-white rounded-lg shadow-md p-6">
  <h1 class="text-2xl font-bold mb-6 text-gray-800 border-b pb-4"><%= t(".title") %></h1>

  <%= form_with(url: admin_settings_path, method: :patch, class: "space-y-8") do |form| %>

    <fieldset>
      <legend class="text-lg font-semibold text-gray-900 mb-4"><%= t(".map_display_settings") %></legend>

      <div class="relative flex items-start">
        <div class="flex h-6 items-center">
          <%= hidden_field_tag 'settings[allow_anonymous_map_updates]', '0' %>
          <%= check_box_tag 'settings[allow_anonymous_map_updates]', '1', @allow_anonymous_map_updates, class: "h-4 w-4 rounded border-gray-300 text-blue-600 focus:ring-blue-600", id: 'settings_allow_anonymous_map_updates' %>
        </div>
        <div class="ml-3 text-sm leading-6">
          <label for="settings_allow_anonymous_map_updates" class="font-medium text-gray-900">
            <%= t(".allow_anonymous_map_updates") %>
          </label>
          <p class="text-gray-500 mt-1">
            <%= t(".allow_anonymous_map_updates_description") %>
          </p>
        </div>
      </div>
    </fieldset>

    <div class="flex items-center justify-end gap-x-6 border-t pt-6">
      <%= form.submit t(".save_settings"), class: "rounded-md bg-blue-600 px-4 py-2 text-sm font-semibold text-white shadow-sm hover:bg-blue-500 focus-visible:outline focus-visible:outline-2 focus-visible:outline-offset-2 focus-visible:outline-blue-600 cursor-pointer" %>
    </div>
  <% end %>
</div>
